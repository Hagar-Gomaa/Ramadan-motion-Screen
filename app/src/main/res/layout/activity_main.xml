<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ramadn"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/ramadane"
        android:text="1 رمضان  1444 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DEFFFFFF"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" _toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <TextView
        android:id="@+id/date"
        android:text=" الخميس, 23 مارس "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99FFFFFF"
        android:textSize="18sp"
        android:padding="6dp"
        android:textStyle="italic"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/ramadane" _toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/popup"
        android:layout_width="329dp"
        android:layout_height="227dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/popup"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="404dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/popup2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/popup"
        android:visibility="gone"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="16dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="383dp"
        android:layout_height="352dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/zena" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="400dp"
        android:layout_height="199dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="220dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lf20_lfirbva8" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="406dp"
        android:layout_height="42dp"

        android:layout_marginTop="128dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottieAnimationView">


        <TextView
            android:id="@+id/ramadantv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" رمضان كريم "
            android:textColor="#DE056B3B"
            android:textSize="24dp"
            android:textStyle="italic|bold"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="603dp" />

        <TextView
            android:id="@+id/yeartv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="كل عام وانتم بخيير"
            android:textColor="#DE056B3B"
            android:textSize="24dp"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/heart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="85dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/grrenheart" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/heart2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/grrenheart"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="404dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>



